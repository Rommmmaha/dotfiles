export ZSH="$HOME/.oh-my-zsh"
plugins=(git archlinux zsh-autosuggestions)

source "$ZSH/oh-my-zsh.sh"
source "/usr/share/zsh/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh"
[ -s "/home/r/.bun/_bun" ] && source "/home/r/.bun/_bun"

bindkey '^H' backward-kill-word

alias update="yay -Syu && flatpak update -y && bun upgrade && bun update -g && flatpak remove --unused -y && yay -Yc"
alias c="code-insiders"
alias ls="eza --icons --group-directories-first"
alias cat="bat --paging=never"
alias tree="ls -T"
alias cmatrix="cmatrix -C cyan"
alias clear="printf '\033[2J\033[3J\033[1;1H'"
alias _nmap='sudo nmap -T5 -n'
alias edit=$EDITOR
alias nano=$EDITOR

qr() {
  qrencode -s 15 -o - "$@" | feh -
}
acp() {
  git add .
  git commit -m "$1"
  git push origin "$(git symbolic-ref --short HEAD)"
}

eval "$(starship init zsh)"
